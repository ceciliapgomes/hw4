<%= form_with(model: @entry, url: entries_path, class: 'mb-4') do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :occurred_on, class: 'form-label' %>
    <%= form.date_field :occurred_on, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :image, class: 'form-label' %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>
  <%= form.hidden_field :place_id, value: @place.id %>
  <%= form.submit 'Create Entry', class: 'btn btn-primary' %>
<% end %>